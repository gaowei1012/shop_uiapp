{
  "pages": [
    //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
    {
      "path": "pages/cart/index",
      "style": {
        // "navigationBarTitleText": "购物袋",
        "usingComponents": {
          "van-stepper": "/wxcomponents/stepper/index",
          "van-checkbox": "/wxcomponents/checkbox/index",
          "van-checkbox-group": "/wxcomponents/checkbox-group/index",
          "van-submit-bar": "/wxcomponents/submit-bar/index"
        }
      }
    },
    {
      "path": "pages/home/index",
      "style": {
        "navigationBarTitleText": "首页",
        "usingComponents": {
          "van-search": "/wxcomponents/search/index"
        }
      }
    },
    {
      "path": "pages/sort/index",
      "style": {
        "navigationBarTitleText": "分类",
        "usingComponents": {
          "van-search": "/wxcomponents/search/index",
          "van-tree-select": "/wxcomponents/tree-select/index"
        }
      }
    },
    {
      "path": "pages/mine/index",
      "style": {
        "navigationBarTitleText": "个人中心"
      }
    }
  ],
  "globalStyle": {
    "navigationBarTextStyle": "black",
    "navigationBarBackgroundColor": "#F7C659",
    "usingComponents": {
      "van-image": "/wxcomponents/image/index",
      "van-icon": "/wxcomponents/icon/index"
    }
  },
  "tabBar": {
    "color": "#BFBFBF",
    "selectedColor": "#FFAA67",
    "background": "#fff",
    "list": [
      {
        "text": "首页",
        "pagePath": "pages/home/index",
        "iconPath": "static/tabs/home.png",
        "selectedIconPath": "static/tabs/home-active.png"
      },
      {
        "text": "分类",
        "pagePath": "pages/sort/index",
        "iconPath": "static/tabs/sort.png",
        "selectedIconPath": "static/tabs/sort-active.png"
      },
      {
        "text": "购物袋",
        "pagePath": "pages/cart/index",
        "iconPath": "static/tabs/cart.png",
        "selectedIconPath": "static/tabs/cart-active.png"
      },
      {
        "text": "我的",
        "pagePath": "pages/mine/index",
        "iconPath": "static/tabs/mine.png",
        "selectedIconPath": "static/tabs/mine-active.png"
      }
    ]
  }
}
